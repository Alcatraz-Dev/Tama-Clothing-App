rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users: Users can read/write their own profiles. Admins can read all.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Products: Everyone can read. Only admins can write.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categories: Everyone can read. Only admins can write.
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: Users can read/write their own. Admins can read/write all.
    match /orders/{orderId} {
      allow create: if isSignedIn();
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow update: if isAdmin(); // Users generally shouldn't update orders once placed (except cancellation maybe)
    }

    // Carts: Private to user.
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Translations: Public read. Admin write.
    match /translations/{key} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}